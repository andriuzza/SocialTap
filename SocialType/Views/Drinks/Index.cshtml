@model IEnumerable<SocialType.Models.Drink>
@{
    ViewBag.Title = "Index";
}

<h2>Price List</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Price</td>
                @if ( a.Rating == 0)
                {
                    <td>No ratings yet</td>
                }
                else
                {
                    <td>@a.Rating</td>
                }
            </tr>
        }
        </tbody>
    </table>
<button class="btn btn-primary" onclick="@Url.Action("Post", "Drinks")">Insert new drink</button>
@model  SocialType.ViewModels.DrinkViewModel
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert values of drink below</h2>

<div class="container">
    @using (Html.BeginForm("SaveRecord", "Drinks", FormMethod.Post))
    {



        @Html.TextBoxFor(model => model.Drink.Name, new { @class = "form-control", @placeholder = "Name" })
        <br />
        @Html.DropDownListFor(model => model.TypeId, new SelectList(Model.TypesDrinks, "Id", "Name"), "", new { @class = "form-control", @placeholder = "Type" })
        <br />
        @Html.TextBoxFor(model => model.Drink.Price, new { @class = "form-control", @placeholder = "Price" })
        <br />
        @Html.DropDownListFor(model => model.LocationId, new SelectList(Model.Locations, "Id", "Name"), "", new { @class = "form-control", @placeholder = "Type" })
        <input type="submit" value="Submit" class="btn btn-primary" />
        <button class="btn btn-primary" onclick="@Url.Action("Index", "Drinks")">Cancel</button>
    }

</div>



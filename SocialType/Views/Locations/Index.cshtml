@model SocialType.Models.Location
@{
    ViewBag.Title = "Index";
}
<h1>Welcome!</h1>
<br />
<br />
<br />
<div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
        <h2 class="text-center">Search for pubs</h2>
        <br />
    @using (Html.BeginForm("Index", "Locations", FormMethod.Post))
    {

        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
        <br />

        <input type="submit" value="Submit" class="btn btn-primary" />

        <button class="btn btn-primary" onclick="@Url.Action("Index", "Drinks")">Cancel</button>
    }
        @if (Model != null)
        {
            <h2>We found the pub, named @Model.Name in a database</h2>
            @Html.ActionLink("Show", "Show", new { id = Model.Id })
        }

        else
        {
            <h2>Nothing been found yet, try to search</h2>
        }

    </div>
</div>



